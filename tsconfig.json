{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es6",
      "es2015"
    ],
    "noImplicitAny": true,
    "strict": true,
    "outDir": "dist/ts",
    "sourceRoot": "./src/",
    "jsx": "react",
    "sourceMap": true,
    "typeRoots": [
      "src/types"
    ],
    "baseUrl": "src",
    "types": [
      "node",
      "jest"
    ],
    "strictPropertyInitialization": false
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "tests",
    "node_modules"
  ]
}
